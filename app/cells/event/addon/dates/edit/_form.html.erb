<dl class="see mod-event">
  <dt><%= @model.lang :event_name %></dt>
  <dd><%= f.text_field :event_name %></dd>
  
  <dt><%= @model.lang :event_dates %></dt>
  <dd class="date">
    <%= text_field_tag "event[][start_date]", nil, { id: nil, class: "js-date start" } %>
    - <%= text_field_tag "event[][close_date]", nil, { id: nil, class: "js-date close" } %>
    <%= button_tag t("event_views.button.del_date"), { type: :button, class: "clear" } %>
  </dd>
  <dd><%= button_tag t("event_views.button.add_date"), { type: :button, class: "add-date" } %></dd>
  <dd style="display: none;"><%= f.text_area :event_dates, class: "event-dates" %></dd>
</dl>
