<%= code_editor ".mod-cms-pagelist textarea", mode: :html %>

<dl class="see mod-cms-pagelist">
  <dt><%= @model.t :conditions %></dt>
  <dd><%= f.text_area :conditions, value: @item.conditions.join("\n"), style: "height: 100px;" %></dd>
  
  <dt><%= @model.t :order %></dt>
  <dd><%= f.select :order, @item.order_options, include_blank: " " %></dd>
  
  <dt><%= @model.t :limit %></dt>
  <dd><%= f.number_field :limit %></dd>
  
  <dt><%= @model.t :upper_html %></dt>
  <dd><%= f.text_area :upper_html %></dd>
  
  <dt><%= @model.t :loop_html %></dt>
  <dd><%= f.text_area :loop_html, style: "height: 100px;" %></dd>
  
  <dt><%= @model.t :lower_html %></dt>
  <dd><%= f.text_area :lower_html %></dd>
</dl>
