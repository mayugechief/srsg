<%= code_editor ".mod-cms-pagelist .html", filename: @item.filename, readonly: true %>

<dl class="see mod-cms-pagelist">
  <dt><%= @model.t :conditions %></dt>
  <dd><%=br @item.conditions.join("\n") %></dd>
  
  <dt><%= @model.t :order %></dt>
  <dd><%= @item.label :order %></dd>
  
  <dt><%= @model.t :limit %></dt>
  <dd><%= @item.send :limit %></dd>
  
  <dt><%= @model.t :upper_html %></dt>
  <dd>
    <% if @item.upper_html.present? %>
    <%= text_area_tag :upper_html, @item.upper_html, class: "html" %>
    <% end %>
  </dd>
  
  <dt><%= @model.t :loop_html %></dt>
  <dd>
    <% if @item.loop_html.present? %>
    <%= text_area_tag :loop_html, @item.loop_html, class: "html" %>
    <% end %>
  </dd>
  
  <dt><%= @model.t :lower_html %></dt>
  <dd>
    <% if @item.lower_html.present? %>
    <%= text_area_tag :lower_html, @item.lower_html, class: "html" %>
    <% end %>
  </dd>
</dl>
