<table class="index">
  <thead>
    <tr>
      <th style="width: 20px;"><input type="checkbox" /></th>
      <th><%= @model.t :user_id %></th>
      <th><%= @model.t :permits %></th>
      <th class="datetime"><%= @model.t :updated %></th>
    </tr>
  </thead>
  
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td>
        <input type="checkbox" name="ids[]" value="<%= item.id %>" />
        <nav class="row-menu">
          <%= link_to "詳細を見る", action: :show, id: item %>
        </nav>
      </td>
      <td><%= link_to item.user.name , action: :show, id: item %></td>
      <td><%= item.permit_names.join("\n") %></td>
      <td><%= item.updated.strftime("%Y/%m/%d") %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items if @items.try(:current_page) %>
