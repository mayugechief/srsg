<%#= f.hidden_field :cur_user %>

<dl class="see">
  <% if params[:action] =~ /new|create/ %>
    
    <dt><%= @model.lang :in_files %></dt>
    <dd><%= f.file_field :in_files, multiple: :multiple %></dd>
    
  <% else %>
  
    <dt><%= @model.lang :in_file %></dt>
    <dd><%= f.file_field :in_file %></dd>
    
    <dt><%= @model.lang :filename %></dt>
    <dd><%= f.text_field :filename %></dd>
    
  <% end %>
  
  <dt><%= @model.lang :state %></dt>
  <dd><%= f.select :state, @item.state_options %></dd>
</dl>
