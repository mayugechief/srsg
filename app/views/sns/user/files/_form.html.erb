<%= f.hidden_field :cur_user %>

<dl class="see">
  <% if params[:action] =~ /new|create/ %>
  <dt><%= @model.lang :files %></dt>
  <dd><%= f.file_field :files, multiple: :multiple %></dd>
  <% else %>
  <dt><%= @model.lang :filename %></dt>
  <dd><%= f.text_field :filename %></dd>
  <% end %>
</dl>
