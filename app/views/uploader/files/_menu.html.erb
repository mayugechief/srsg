<% if params[:action] !~ /index/ %>
<nav class="act-menu">
  <header><h1><%= lang :actions %></h1></header>
  <div>
  <% if params[:action] =~ /show|create/ %>
    <% if params[:do] =~ /show/ %>
    <%= link_to :edit, { action: :show, filename: @item.filename, do: "edit" } %>
    <%= link_to :delete, { action: :show, filename: @item.filename, do: "delete" } %>
    <%= link_to :back_to_index, { action: :show, filename: @item.dirname } %>
  <% elsif params[:do] =~ /edit|delete/ %>
    <%= link_to :back_to_show, { action: :show, filename: @item.filename, do: "show" } %>
    <%= link_to :back_to_index, { action: :show, filename: @item.dirname } %>
    <% elsif params[:do] =~ /new/ %>
    <%= link_to :back_to_index, { action: :show, filename: @item.filename } %>
  <% else %>
    <%= link_to :create_directory, {action: :show, filename: @item.filename, do: "new_directory" }, class: "icon-node" %>
    <%= link_to :upload_files, {action: :show, filename: @item.filename,  do: "new_files" }, class: "icon-page" %>
    <% end %>
  <% elsif params[:action] =~ /update/ %>
    <%= link_to :back_to_show, { action: :show, filename: @item.filename, do: "show" } %>
    <%= link_to :back_to_index, { action: :show, filename: @item.dirname } %>
  <% end %>
  </div>
</nav>
<% end %>
