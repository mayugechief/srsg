<%= form_for :item, url: { action: :create }, html: { id: "item-form", multipart: true } do |f| %>
<%= error_messages_for :item %>

<div class="addon-view" id="addon-basic">
<%= render file: '_form', locals: { f: f } %>
</div>

<%= render file: "_addons_form", locals: { f: f } %>

<footer class="send">
  <%= f.submit '保存', class: :save %>
  <%= f.button "キャンセル", onclick: "location.href='#{url_for(action: :index)}'; return false;" %>
</footer>
<% end %>
