<%= form_for :item, url: { action: :update }, html: { method: :put, multipart: true } do |f| %>
<%= error_messages_for :item %>

<%= render file: '_form', locals: { f: f } %>

<footer class="send">
  <%= f.submit '保存', class: :save %>
  <%= f.button "キャンセル", onclick: "location.href='#{url_for(action: :show)}'; return false;" %>
</footer>
<% end %>
