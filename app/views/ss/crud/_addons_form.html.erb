<% if @model && (addons = @model.addons).size > 0 %>

<% controller.instance_variable_set :@form, f %>

<% addons.each do |addon| %>
<div class="addon-view" id="addon-<%= addon.object_id %>">
  <header><h2><%= addon.name %></h2></header>
  <%= render_cell "#{addon.path}/edit", params[:action] %>
</div>
<% end %>

<% end %>
