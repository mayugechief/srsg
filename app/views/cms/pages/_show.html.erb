<dl class="see">
  <dt><%= @model.lang :name %></dt>
  <dd><%= @item.send :name %></dd>
  
  <dt><%= @model.lang :filename %></dt>
  <dd><%= @item.send :filename %></dd>
  
  <% if @item.send(:keywords).present? %>
  <dt><%= @model.lang :keywords %></dt>
  <dd><%= @item.send :keywords %></dd>
  <% end %>
  
  <% if @item.send(:description).present? %>
  <dt><%= @model.lang :description %></dt>
  <dd><%= @item.send :description %></dd>
  <% end %>
  
  <% if @item.send(:layout_id).present? %>
  <dt><%= @model.lang :layout_id %></dt>
  <dd><%= tryb{@item.layout.name} %></dd>
  <% end %>
</dl>
