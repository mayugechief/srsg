<%

#fields = {} #local-variable
url = params[:action] =~ /new|create/ ? url_for(action: :new) : url_for(action: :edit)
bind  = "$(this).parent().parent().parent().hide();"
bind << "location.href = '#{url}?route=' + $(this).val();"

%><dl class="see">
  
  <dt><%= @model.lang :route %></dt>
  <dd><%= f.select :route, Cms::Node.addons, {}, onchange: bind %></dd>
  
  <dt><%= @model.lang :name %></dt>
  <dd><%= f.text_field :name %></dd>
  
  <% if fields[:filename] != -1 %>
  <dt><%= @model.lang :filename %></dt>
  <dd><%= f.text_field :filename %></dd>
  <% end %>
  
  <% if fields[:layout_id] != -1 %>
  <dt><%= @model.lang :layout_id %></dt>
  <dd><%= f.select :layout_id, @cur_site.layouts.map {|c| [c.name, c.id]}, :include_blank => "" %></dd>
  <% end %>
  
  <% if fields[:shortcut] != -1 %>
  <dt><%= @model.lang :shortcut %></dt>
  <dd><%= f.select :shortcut, [["表示する", "1"],["表示しない",""]], include_blank: "" %></dd>
  <% end %>
</dl>
