<table class="index">
  <thead>
    <tr>
      <th><%= @model.lang(:name) %></th>
      <th class="filename"><%= @model.lang(:filename) %></th>
    </tr>
  </thead>
  
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td>
        <% route = item.route.presence || "node/nodes" %>
        <%= link_to item.name, "/.#{@cur_site.host}/#{route.sub(/\/.*/, '')}#{item.id}", class: "icon-node"%>
        <nav class="row-menu">
          <%= link_to "開く", "/.#{@cur_site.host}/#{route.sub(/\/.*/, '')}#{item.id}" %>
          <%= link_to "詳細を見る", node_config_path(cid: item) %>
        </nav>
      </td>
      <td class="filename"><%= item.filename %></td>
    </tr>
    <% end %>
  </tbody>
  
</table>
