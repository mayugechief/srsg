<table class="index">
  <thead>
    <tr>
      <th><%= @model.lang(:name) %></th>
      <th><%= @model.lang(:filename) %></th>
      <th><%= @model.lang(:updated) %></th>
    </tr>
  </thead>
  
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td>
        <%= link_to item.name, "/.#{@cur_site.host}/#{item.route.sub(/\/.*/, '')}#{item.id}" %>
        <nav class="row-menu">
          <%= link_to "コンテンツ管理", "/.#{@cur_site.host}/#{item.route.sub(/\/.*/, '')}#{item.id}" %>
          <%= link_to "詳細を見る", node_config_path(cid: item) %>
        </nav>
      </td>
      <td><%= link_to item.filename, item.full_url, target: "_blank" %></td>
      <td><%= item.updated.strftime("%Y/%m/%d") %></td>
    </tr>
    <% end %>
  </tbody>
  
</table>
