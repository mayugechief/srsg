<table class="index">
  <thead>
    <tr>
      <th><%= @model.t :name %></th>
      <th class="filename"><%= @model.t :filename %></th>
      <th class="route"><%= @model.t :route %></th>
    </tr>
  </thead>
  
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td>
        <% route = item.route.presence || "cms/nodes" %>
        <%= link_to item.name, "/.#{@cur_site.host}/#{route.sub(/\/.*/, '')}#{item.id}", class: "icon-node"%>
        <nav class="row-menu">
          <%= link_to :open, "/.#{@cur_site.host}/#{route.sub(/\/.*/, '')}#{item.id}" %>
          <%= link_to :show, node_conf_path(cid: item) %>
        </nav>
      </td>
      <td class="filename"><%= item.filename %></td>
      <td class="route"><%= t("modules.nodes.#{item.route}").sub(/\/.*/, '') %></td>
    </tr>
    <% end %>
  </tbody>
  
</table>

<%= paginate @items if @items.try(:current_page) %>
