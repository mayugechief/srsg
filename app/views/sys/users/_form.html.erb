<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= f.text_field :name %></dd>
  
  <dt><%= @model.t :email %></dt>
  <dd><%= f.email_field :email %></dd>
  
  <dt><%= @model.t :password %></dt>
  <dd><%= f.text_field :password %></dd>
  
  <dt><%= @model.t :groups %></dt>
  <dd>
    <select multiple="multiple" id="multi-select" name="item[group_ids][]">
    <% SS::Group.all.each do |item| %>
    <option value="<%= item._id %>" <%= "selected" if @item.group_ids.include?(item._id) %>><%= item.name %></option>
    <% end %>
    </select>
  </dd>
</dl>
