<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= f.text_field :name %></dd>
  
  <dt><%= @model.t :email %></dt>
  <dd><%= f.email_field :email %></dd>
  
  <dt><%= @model.t :password %></dt>
  <dd><%= f.text_field :password %></dd>
  
  <dt><%= @model.t :groups %></dt>
  <dd>
    <%= hidden_field_tag "item[group_ids][]" %>
    <% SS::Group.all.each do |item| %>
    <label><%= f.check_box "group_ids[]", {}, item._id %><%= item.name %></label>
    <% end %>
  </dd>
</dl>
