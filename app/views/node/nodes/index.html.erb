<table class="index">
  <thead>
    <tr>
      <th class="checkbox"><input type="checkbox" /></th>
      <th><%= @model.lang :name %></th>
      <th class="filename"><%= @model.lang :filename %></th>
      <th class="route"><%= @model.lang :route %></th>
      <th class="datetime"><%= @model.lang :updated %></th>
    </tr>
  </thead>
  
  <tbody>
    <tr>
      <% if @cur_node.parent %>
      <td class="checkbox">
        <nav class="row-menu">
          <%= link_to :parent_directory, cid: @cur_node.parent %>
        </nav>
      </td>
      <td><%= link_to :parent_directory, { cid: @cur_node.parent }, class: "icon-node-up" %></td>
      <% else %>
      <td class="checkbox">
        <nav class="row-menu">
          <%= link_to :parent_directory, cms_nodes_path %>
        </nav>
      </td>
      <td><%= link_to :parent_directory, cms_nodes_path, class: "icon-node-up" %></td>
      <% end %>
      <td class="filename"></td>
      <td class="route"></td>
      <td class="datetime"></td>
    </tr>
    
    <% @items.each do |item| %>
    <tr>
      <td class="checkbox">
        <input type="checkbox" name="ids[]" value="<%= item.id %>" />
        <nav class="row-menu">
          <%= link_to "詳細を見る", action: :show, id: item %>
        </nav>
      </td>
      <td><%= link_to item.name, { cid: item }, class: "icon-node" %></td>
      <td class="filename"><%= File.basename item.filename %></td>
      <td class="route"><%= item.route %></td>
      <td class="datetime"><%= item.updated.strftime("%Y/%m/%d %H:%M") %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items if @items.try(:current_page) %>
