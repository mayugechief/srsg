<nav class="act-menu">
  <header><h1>Action</h1></header>
  <div>
    <% if params[:action] =~ /index/ %>
      <%= link_to :new_node, { controller: :nodes, action: :new }, class: "icon-node" %>
      <%= link_to :new_page, { controller: :pages, action: :new }, class: "icon-page" %>
      <%= link_to :config, { controller: :selves, action: :show }, class: "icon-config" %>
    <% elsif params[:action] =~ /new|create/ %>
      <%= link_to :back_to_index, action: :index %>
    <% elsif params[:action] =~ /edit|update|delete/ %>
      <%= link_to :back_to_show, action: :show, id: @item %>
      <%= link_to :back_to_index, action: :index %>
    <% else %>
      <%= link_to :edit, action: :edit, id: @item %>
      <%= link_to :delete, action: :delete, id: @item %>
      <%= link_to :back_to_index, action: :index %>
    <% end %>
  </div>
</nav>
