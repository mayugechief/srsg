<nav class="act-menu">
  <header><h1><%= t :actions %></h1></header>
  <div>
    <% if params[:action] =~ /edit|update|delete/ %>
      <%= link_to :back_to_show, action: :show %>
      <%= link_to :back_to_index, controller: :nodes %>
    <% else %>
      <%= link_to :edit, action: :edit if @item.permitted?(action: :update, user: @cur_user) %>
      <%= link_to :delete, action: :delete if @item.permitted?(action: :delete, user: @cur_user) %>
      <%= link_to :back_to_index, controller: :nodes %>
    <% end %>
  </div>
</nav>

<% if params[:action] =~ /show|new|edit|create|update/ %>
<%= render file: "_addons_menu" %>
<% end %>
